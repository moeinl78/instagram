<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/profileNewStoryFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_add_box_outline"
        app:fabCustomSize="128dp"
        app:elevation="0dp"
        app:borderWidth="1dp"
        app:borderColor="@color/black"
        app:backgroundTint="@color/black"
        app:maxImageSize="64dp"
        app:rippleColor="@color/gray_text"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When you share photos and videos, they'll\n appear on your profile"
        android:textColor="@color/gray_text"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share your first photo or video"
        android:textColor="@color/blue_text"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        />

</LinearLayout>