<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Instagram" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray_text</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_button</item>
        <item name="colorSecondaryVariant">@color/black_text</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="colorError">@color/red_badge</item>
        <item name="colorAccent">@color/blue_text</item>
    </style>

    <style name="ToolbarInstagram" parent="Theme.MaterialComponents">
        <item name="fontFamily">@font/vibes_regular</item>
        <item name="android:fontFamily">@font/vibes_regular</item>
    </style>
</resources>